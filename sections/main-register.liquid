<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4 text-center">Create an Account</h2>

      {% form 'create_customer', return_to: routes.collections_url %}
        {{ form.errors | default_errors }}

        <div class="form-group">
          <div class="row">
            <div class="col-md-6">
              <label for="first-name">First name:</label>
              <input id="first-name" class="form-control" type="text" name="customer[first_name]" required>
            </div>
            <div class="col-md-6 mt-3 mt-md-0">
              <label for="last-name">Last name:</label>
              <input id="last-name" class="form-control" type="text" name="customer[last_name]">
            </div>
          </div>
        </div>
        <br>
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" class="form-control" id="email" name="customer[email]" required>
        </div>
        <br>
        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" class="form-control" id="password" name="customer[password]" required>
        </div>
        <br>
        <button type="submit" class="btn btn-primary btn-block">Register</button>
      {% endform %}

      <div class="mt-3 text-center">
        <p>Already have an account? <a class="link" href="{{ routes.account_login_url }}">Login</a></p>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Register Form",
  "class": "section",
  "settings": []
}
{% endschema %}
