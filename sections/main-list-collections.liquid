<div class="container mt-5">
  <h1 class="mb-4">All Collections</h1>

  <div class="row">
    {% for collection in collections %}
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">{{ collection.title }}</h5>
            <p class="card-text">{{ collection.description }}</p>
            <a href="{{ collection.url }}" class="btn btn-primary">View Collection</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "List Collections",
  "class": "section",
  "settings": []
}
{% endschema %}
