<section class="container">
  {% form 'contact' %}
    {{ form.errors | default_errors }}

    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" class="form-control" id="name" name="contact[first_name]" required>
    </div>

    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" class="form-control" id="email" name="contact[email]" required>
    </div>

    <div class="form-group">
      <label for="message">Message:</label>
      <textarea class="form-control" id="message" name="contact[body]" rows="5" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  {% endform %}
</section>

{% schema %}
{
  "name": "Contact Form",
  "tag": "section",
  "class": "section",
  "settings": [],
  "presets": [
    {
      "name": "Contact Form"
    }
  ]
}
{% endschema %}
