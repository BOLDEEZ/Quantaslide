<div class="container mt-5 mb-5">
  <h1 class="mb-4">{{ blog.title }}</h1>
  {% paginate blog.articles by 2 %}
    <!-- Blog Articles -->
    <div class="row">
      {% for article in blog.articles %}
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <a href="{{ article.url }}" class="text-decoration-none">
              {% if article.image != blank %}
                <img
                  src="{{ article.image | image_url: width: 720, height: 350 }}"
                  class="card-img-top"
                  alt="{{ article.title }}"
                >
              {% endif %}
            </a>
            <div class="card-body">
              <a href="{{ article.url }}" class="text-decoration-none">
                <h5 class="card-title">{{ article.title }}</h5>
              </a>
              <p class="card-text">{{ article.content | truncate: 100 }}</p>
            </div>
            <div class="card-footer">
              <small class="text-muted">{{ article.published_at | date: '%B %d, %Y' }}</small>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Pagination -->
    {% include 'custom-pagination' %}
  {% endpaginate %}
</div>

<!-- Pagination -->
{% comment %}
  <nav>
    <ul class="pagination justify-content-center">
      <li class="page-item disabled">
        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
      </li>
      <li class="page-item"><a class="page-link" href="#">1</a></li>
      <li class="page-item"><a class="page-link" href="#">2</a></li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item">
        <a class="page-link" href="#">Next</a>
      </li>
    </ul>
  </nav>
{% endcomment %}

{% schema %}
{
  "name": "Blog",
  "class": "section",
  "settings": []
}
{% endschema %}
