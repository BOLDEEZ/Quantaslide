<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4 text-center">Reset Password</h2>

      {%- form 'reset_customer_password' -%}
        {{ form.errors | default_errors }}

        <div class="form-group">
          <label for="newPassword">New Password:</label>
          <input type="password" class="form-control" id="newPassword" name="customer[password]" required>
        </div>

        <div class="form-group">
          <label for="confirmNewPassword">Confirm New Password:</label>
          <input type="password" class="form-control" id="confirmNewPassword" name="customer[password_confirmation]" required>
        </div>
        <br>
        <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
      {%- endform -%}

      <p class="mt-3 text-center">
        Remembered your password? <a class="link" href="{{ routes.account_login_url }}">Login</a>
      </p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Reset Password Form",
  "class": "section",
  "settings": []
}
{% endschema %}
