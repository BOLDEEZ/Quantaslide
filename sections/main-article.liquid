<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      {% if article.image != blank %}
        {{ article.image | image_url: width: 1024, height: 720 | image_tag: class: 'img-fluid', alt: article.title }}
      {% endif %}
      <h1 class="mt-4">{{ article.title }}</h1>
      <p class="text-muted">Published on {{ article.published_at | date: '%B %d, %Y' }}</p>

      <!-- Article Text -->
      {{ article.content }}

      <!-- Share Button -->
      <div class="mt-4 mb-4">
        <button class="btn btn-primary">Share</button>
      </div>

      <!-- Comment Box -->
      <h3>Comments</h3>

      {% if article.comments_enabled? %}
        {% form 'new_comment', article %}
          {{ form.errors | default_errors }}
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="comment[author]" value="{{ form.author }}">
          </div>

          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="comment[email]" value="{{ form.email }}">
          </div>

          <div class="form-group">
            <label for="comment">Comment</label>
            <textarea class="form-control" id="comment" name="comment[body]">{{ form.body }}</textarea>
          </div>

          <button type="submit" class="btn btn-primary">Post</button>
        {% endform %}
      {% endif %}

      <!-- Comments Section -->
      <div class="mt-4">
        {% paginate article.comments by 5 %}
          {% for comment in article.comments %}
            <!-- comment info -->
            <div class="card mb-3">
              <div class="card-body">
                <p class="card-text">{{ comment.content }}</p>
                <p class="card-text text-muted">
                  Posted by {{ comment.author }} on {{ comment.created_at | date: '%B %d, %Y' }}
                </p>
              </div>
            </div>
          {% endfor %}

          {{ paginate | default_pagination }}
        {% endpaginate %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Article",
  "class": "section",
  "settings": []
}
{% endschema %}
