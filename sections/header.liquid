<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <a class="navbar-brand" href="#">Navbar scroll</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarScroll"
      aria-controls="navbarScroll"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarScroll">
      <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
        {% for link in linklists['main-menu'].links -%}
          {% if link.links.size > 0 -%}
            <li class="nav-item dropdown {% if link.active %} active {% endif %}">
              <a
                class="nav-link dropdown-toggle"
                href="{{ link.url }}"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="true"
              >
                {{ link.title }}
              </a>
              <ul class="dropdown-menu">
                {% for child in link.links %}
                  <li>
                    <a class="dropdown-item {% if child.active %} active {% endif %}" href="{{ child.url }}">
                      {{- child.title -}}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            </li>

          {%- else -%}
            <li class="nav-item">
              <a class="nav-link {% if link.active %} active {% endif %}" aria-current="page" href="{{ link.url }}">
                {{- link.title -}}
              </a>
            </li>
          {%- endif %}
        {%- endfor %}
      </ul>

      <form class="mb-0 d-flex" action="{{ routes.search_url }}">
        <input
          class="form-control me-2"
          type="search"
          placeholder="Search"
          aria-label="Search"
          name="q"
          required
          value="{{ search.terms | escape }}"
        >
        <input class="btn btn-outline-success" type="submit" value="Search">
      </form>

      <a class="btn" href="/cart">Cart</a>

      {% if customer %}
        <a class="btn" href="{{ routes.account_url }}">Account</a>
        <a class="btn btn-danger" href="{{ routes.account_logout_url }}">Log out</a>
      {% else %}
        <a class="btn" href="{{ routes.account_login_url }}">Login</a>

        {% if shop.customer_accounts_optional %}
          <span>or</span>
          <a class="btn" href="{{ routes.account_register_url }}">Create an account</a>
        {% endif %}
      {% endif %}
      
    </div>
  </div>
</nav>

