{% if paginate.parts.size > 0 %}
  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      {% if paginate.previous %}
        <li class="page-item">
          <a class="page-link" href="{{ paginate.previous.url }}" tabindex="-1" aria-disabled="true">Previous</a>
        </li>
      {% else %}
        <li class="page-item disabled">
          <span class="page-link" tabindex="-1" aria-disabled="true">Previous</span>
        </li>
      {% endif %}

      {% for part in paginate.parts %}
        {% if part.is_link %}
          <li class="page-item">
            <a class="page-link" href="{{ part.url }}">{{ part.title }}</a>
          </li>
        {% else %}
          {% if part.title == paginate.current_page %}
            <li class="page-item active" aria-current="page">
              <span class="page-link">{{ part.title }}</span>
            </li>
          {% else %}
            <li class="page-item">
              <a class="page-link" href="{{ part.url }}">{{ part.title }}</a>
            </li>
          {% endif %}
        {% endif %}
      {% endfor %}

      {% if paginate.next %}
        <li class="page-item">
          <a class="page-link" href="{{ paginate.next.url }}">Next</a>
        </li>
      {% else %}
        <li class="page-item disabled">
          <span class="page-link" aria-disabled="true">Next</span>
        </li>
      {% endif %}
    </ul>
  </nav>
{% endif %}
